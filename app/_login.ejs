<div
  class="modal fade"
  id="loginModal"
  tabindex="-1"
  aria-labelledby="loginModalLabel"
  aria-hidden="true"
>
  <div
    class="modal-dialog login-content d-flex align-items-center"
    style="height: 100%; margin: 0 auto"
  >
    <div
      class="modal-content d-flex flex-column align-items-center position-relative bg-primary border"
    >
      <div class="modal-wrap">
        <div class="modal-header justify-content-center border-0">
          <h3 class="modal-title" id="loginModalLabel">登入</h3>
          <button
            type="button"
            class="bt position-absolute top-0 end-0 bg-primary text-light border-0"
            data-bs-dismiss="modal"
          >
            X
          </button>
        </div>
        <div class="modal-body">
          <form action="" class="form">
            <label for="email" class="login-label d-block text-gray-400">信箱</label>
            <input
              type="email"
              id="email"
              class="login-input d-block bg-secondary border mb-4 pt-2 pb-2 ps-3"
              placeholder="請輸入信箱"
            />
            <label for="password" class="login-label d-block text-gray-400">密碼 </label>
            <input
              type="password"
              id="password"
              class="login-input d-block bg-secondary border mb-5 pt-2 pb-2 ps-3"
              placeholder="請輸入密碼"
            />
            <input
              type="button"
              value="登入"
              class="login-button d-block mb-6 border-0"
            />
            <div class="others">
              <div class="fs-6 others-title mb-3 d-flex align-items-center text-gray-400">
                <div class="line me-3"></div>
                其他登入方式
                <div class="line ms-3"></div>
              </div>
              <div class="other-way facebook text-center mb-4 border">
                <img
                  src="./assets/images/icon_fb.svg"
                  alt="facebook-icon"
                  class="icon"
                />
                Facebook 登入
              </div>
              <div class="other-way google text-center border">
                <img
                  src="./assets/images/icon_google.svg"
                  alt="google-icon"
                  class="icon"
                />
                Google 登入
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
